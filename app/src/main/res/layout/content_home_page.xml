    <LinearLayout
        android:id="@+id/bottomLayut"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:background="@drawable/rectangle_shape"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/callDeskRl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:gravity="center">

            <ImageView
                android:id="@+id/callDeskImage"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="@drawable/car_flag" />

            <TextView
                android:id="@+id/callDeskText"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/callDeskImage"
                android:gravity="center"
                android:text="Call Travel Desk"
                android:textColor="#ffffff"
                android:textSize="13sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".01"
            android:background="#ffffff" />

        <RelativeLayout
            android:id="@+id/callToDriverRl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:id="@+id/callDriverImage"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="@drawable/car_flag" />

            <TextView
                android:id="@+id/callDriverText"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/callDriverImage"
                android:gravity="center"
                android:text="Call Driver"
                android:textColor="#ffffff"
                android:textSize="13sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".01"
            android:background="#ffffff" />

        <RelativeLayout
            android:id="@+id/feedbackRl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/disable_button_color"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center"
            android:onClick="feedback">

            <ImageView
                android:id="@+id/tripImage"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="@drawable/star"
                android:clickable="false"/>

            <TextView
                android:id="@+id/tripText"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tripImage"
                android:gravity="center"
                android:text="Feedback"
                android:textColor="#ffffff"
                android:textSize="13sp"
                android:textStyle="bold"
                android:clickable="false"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>