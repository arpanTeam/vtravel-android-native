                android:gravity="center"
                android:text="SOS"
                android:textColor="#ffffff"
                android:textSize="13sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            android:background="#ffffff" />

        <RelativeLayout
            android:id="@+id/readyToBoardRl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:layout_weight="9.95">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/readyToBoardFrame"
                android:gravity="center">

                <RelativeLayout
                    android:id="@+id/readyToBoard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/suitcaseIV"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/suitcase" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="Ready To Board"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/suitcaseIV"
                        android:textColor="#ffffff"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </RelativeLayout>

<!--                <RelativeLayout-->
