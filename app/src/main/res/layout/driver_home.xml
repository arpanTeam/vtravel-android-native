<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/topRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/rectangle_shape"
        android:paddingBottom="5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="5dp">

        <RelativeLayout
            android:id="@+id/welcomeRl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/driverName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Welcome ***"
                android:textSize="@dimen/small_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pickUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Pi***"
                android:textSize="@dimen/small_text_size"
                android:textStyle="bold" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/topRl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welcomeRl"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/gaadiNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/reportingLay"
                android:text=""
                android:textSize="@dimen/small_text_size"
                android:maxLines="3"/>


            <TextView
                android:id="@+id/reportingDetail2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text=""
                android:textSize="@dimen/small_text_size"
                android:textStyle="normal"
                android:visibility="gone"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:id="@+id/reportingLay">
<!--                android:layout_below="@+id/reportingDetail2">-->

                <ImageView
                    android:id="@+id/watch"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/watch" />

                <TextView
                    android:id="@+id/reportingTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/watch"
                    android:gravity="center"
                    android:text=""
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="normal" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/speedRl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gaadiNum"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/reportingAdress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:maxLines="2"
                    android:singleLine="false"
                    android:textSize="@dimen/small_text_size"
                    android:textStyle="normal" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/batteryDetailRl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/speedRl"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tripId"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="Trip Id ****"
                    android:textSize="@dimen/small_text_size"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:shadowColor="#909090"
                    android:shadowDx="-2"
                    android:shadowDy="1"
                    android:shadowRadius="3">
                </TextView>


                <TextView
                    android:id="@+id/internetText"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:gravity="bottom"
                    android:text="No Internet"
                    android:textSize="@dimen/small_text_size"
                    android:textStyle="normal" />


                <ImageView
                    android:id="@+id/gpsImage"
                    android:layout_width="@dimen/image_size"
                    android:layout_height="@dimen/image_size"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/internetText"
                    android:background="@drawable/gps" />


                <ImageView
                    android:id="@+id/batteryImage"
                    android:layout_width="@dimen/image_size"
                    android:layout_height="@dimen/image_size"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/gpsImage"
                    android:background="@drawable/battery_plu" />

                <ImageView
                    android:id="@+id/sosIcon"
                    android:layout_width="@dimen/image_size"
                    android:layout_height="@dimen/image_size"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/batteryImage"
                    android:background="@drawable/sos"
                    android:visibility="gone" />


            </RelativeLayout>


        </RelativeLayout>


    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomLayut"
        android:layout_below="@+id/topRl">

        <fragment
            android:id="@+id/mapFragment"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/soscall"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:onClick="sos">

                <ImageView
                    android:id="@+id/sosImage"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/car_flag" />

                <TextView
                    android:id="@+id/sosText"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/sosImage"
                    android:gravity="center"
                    android:text="SOS"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:gravity="top|left"
              >
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/tripComp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:background="#80000000"
            android:visibility="gone">

            <TextView
                android:id="@+id/tripCompleteTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="TRIP COMPLETED"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/nextTrip"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:onClick="nextTrip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get New Trip"
                    android:textColor="@color/white"
                    android:textStyle="normal" />
            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/travelerBottomRl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#80000000"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/travelerRl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/travelerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Welcome Ram Sing"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/travelerPickUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/cross"
                    android:text="Pick Up"
                    android:textColor="#ffffff"
                    android:textSize="13sp"
                    android:textStyle="italic"
                    android:visibility="invisible" />

                <RelativeLayout
                    android:id="@+id/cross"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true">

                    <ImageView
                        android:id="@+id/cross1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="1dp"
                        android:background="@drawable/cross" />
                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/travelerDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/travelerRl"
                android:layout_marginRight="@dimen/t_margin_time_addr"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/traveTime"
                android:gravity="left"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="@dimen/small_text_size"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/traveTime"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/travelerRl"
                android:layout_marginTop="5dp"
                android:gravity="end"
                android:text="22:59:00"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="normal" />

            <RelativeLayout
                android:id="@+id/buttonLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/travelerDetail"
                android:layout_marginTop="8dp"
                android:gravity="center">

                <FrameLayout
                    android:id="@+id/waitingButtonRl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/arrivingButton"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:background="@drawable/signupbutton"
                        android:gravity="center"
                        android:onClick="arriving"
                        android:text="Arrived"
                        android:textColor="@color/black"
                        android:textSize="11dp"
                        android:visibility="visible" />


                    <Button
                        android:id="@+id/waitingButton"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:background="@drawable/signupbutton"
                        android:gravity="center"
                        android:onClick="waiting"
                        android:text="Waiting"
                        android:textColor="@color/black"
                        android:textSize="11dp"
                        android:visibility="gone" />
                </FrameLayout>

                <Button
                    android:id="@+id/notRepordButton"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/waitingButtonRl"
                    android:background="@drawable/signupbutton"
                    android:gravity="center"
                    android:onClick="notReported"
                    android:text="Not Reported"
                    android:textColor="@color/black"
                    android:textSize="11dp" />

                <Button
                    android:id="@+id/pickedUpButton"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/notRepordButton"
                    android:background="@drawable/signupbutton"
                    android:gravity="center"
                    android:onClick="pickUp"
                    android:text="Picked Up"
                    android:textColor="@color/black"
                    android:textSize="12dp" />
            </RelativeLayout>
        </RelativeLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/bottomLayut"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:background="@drawable/rectangle_shape"
        android:orientation="horizontal"
        android:weightSum="20">

        <RelativeLayout
            android:id="@+id/callDeskRl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9.95"
            android:background="@color/colorPrimary"
            android:gravity="center">

            <ImageView
                android:id="@+id/callDeskImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/car_flag" />

            <TextView
                android:id="@+id/callDeskText"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/callDeskImage"
                android:gravity="center"
                android:text="Call Travel Desk"
                android:textColor="#ffffff"
                android:textSize="13sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            android:background="#ffffff" />

        <RelativeLayout
            android:id="@+id/tripCompRl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9.95"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:onClick="tripCompleted">

            <ImageView
                android:id="@+id/tripImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/golden_tick" />

            <TextView
                android:id="@+id/tripText"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tripImage"
                android:gravity="center"
                android:text="Trip \n Completed"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>